@model BlogPost.Web.Models.ViewModels.EditTagrequest
@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tag Request - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" id="id" asp-for="Id" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" />
        </div>

        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName" />
        </div>

        <div class="mb-3">
            <div class="d-flex">
            <button type="submit" class="btn btn-dark">Update</button>
            <button type="submit" class="btn btn-danger ms-2" asp-area="" asp-controller="AdminTag" asp-action="Delete">Delete</button>
        </div>
        </div>

    </form>
</div>