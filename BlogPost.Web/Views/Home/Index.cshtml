@model BlogPost.Web.Models.ViewModels.HomePageRequest
@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Europe!!
            </h1>
            <p class="lead">
                Welcome to Europe! This continent has borders with Asia and is close to Africa.
                Here is an overview of the countries I have been to in Europe. I’ve visited few
                countries so far, but there are more on my bucket list. If you have any questions
                about those destinations, I’m glad to answer them!
            </p>
        </div>

        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/460672/pexels-photo-460672.jpeg?auto=compress&cs=tinysrgb&w=600"
                 alt="Europe!!"
                 class="d-block mx-lg-auto" />

        </div>
    </div>

    <div class="container mb-2">
        <div class="justify-content-center row">
            <div class="col-6 d-flex">
                @if(Model!=null && Model.Tags.Any())
                {
                    @foreach(var tag in Model.Tags)
                    {
                        <span class="badge bg-dark me-1">@tag.Name</span>
                    }
                }
            </div>
        </div>
    </div>

    <div class="container">
        <div class="justify-content-center row">
            <div class="col-6">
                @if (Model != null && Model.Blog.Any())
                {
                    foreach (var blog in Model.Blog)
                    {
                        <div class="mb-5 bg-light box-shadow p-5">
                            <img src="@blog.ImageURL" alt="@blog.Haeding" class="mb-2 d-block img-fluid" />
                            <h2 class="mb-4">@blog.Haeding</h2>
                            <p class="mb-4">
                                Author : @blog.Author
                                <br />

                                Published Date : @blog.PublishedDate.ToShortDateString()
                            </p>
                            <p class="mb-4">
                                @foreach (var tag in blog.Tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Name</span>
                                }
                            </p>
                            <p class="mb-4">@blog.Description</p>
                            <a class="btn btn-dark" asp-area="" asp-controller="Blog" asp-action="Index" asp-route-url="@blog.URLHandler">Read More</a>
                        </div>

                    }
                }
            </div>

        </div>
    </div>
